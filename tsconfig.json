{
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "esModuleInterop": true,
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": "./",
    "allowJs": true,
    "strict": false,
    "outDir": "./dist",
    "pretty": true,
    "lib": ["ES2021"],
    "module": "commonjs",
    "target": "ES2021",
    "typeRoots": ["./node_modules", "./types"],
    "types": ["node", "mocha"]
  },
  "ts-node": {
    "transpileOnly": true
  },
  "exclude": ["node_modules"]
}
